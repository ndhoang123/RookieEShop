@model RookieEShop.Shared.OrderVm

@{
	ViewData["Title"] = "Payment Page";
}

<div class="row">
	<form asp-controller="Cart" asp-action="PaymentHandle" method="POST">
		<h3>Shipping method</h3>
		<div class="radio">
			<label>
				<input type="radio" name="Shippingmethod" checked="checked" value="0" />
				<strong>Standard</strong>
				<strong>Delivery Date:</strong> @DateTime.Now.AddDays(3)
				Shipping Fee: 0 VND
			</label>
		</div>
		<div class="radio">
			<label>
				<input type="radio" name="Shippingmethod" value="30000" />
				<strong>Faster</strong>
				<strong>Delivery Date:</strong> @DateTime.Now.AddHours(2)
				Shipping Fee: 30000 VND
			</label>
		</div>
		<br />
		<h3>Payment method</h3>
		<div class="radio">
			<label>
				<input type="radio" name="Paymentmethod" checked="checked" value="COD" />
				<strong>COD</strong>
			</label>
		</div>
		<div class="form-group">
			<div class="text-right">
				<button type="submit" class="btn btn-success">Finish</button>
			</div>
		</div>
	</form>
</div>